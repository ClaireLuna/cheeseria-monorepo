{
  "name": "cheeseria-monorepo",
  "version": "1.0.0",
  "description": "Cheeseria monorepo with frontend and backend",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=cheeseria-backend\" \"npm run dev --workspace=cheeseria-frontend\"",
    "dev:backend": "npm run dev --workspace=cheeseria-backend",
    "dev:frontend": "npm run dev --workspace=cheeseria-frontend",
    "build": "npm run build --workspace=cheeseria-backend && npm run build --workspace=cheeseria-frontend",
    "build:backend": "npm run build --workspace=cheeseria-backend",
    "build:frontend": "npm run build --workspace=cheeseria-frontend",
    "start": "npm start --workspace=cheeseria-backend",
    "start:backend": "npm start --workspace=cheeseria-backend",
    "start:frontend": "npm start --workspace=cheeseria-frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "cheeseria-backend",
    "cheeseria-frontend"
  ]
}
